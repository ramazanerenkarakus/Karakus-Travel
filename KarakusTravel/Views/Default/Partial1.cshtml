@using KarakusTravel.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    <!--PARTİAL 1 SEYAHAT BLOGUMA HOŞGELDİNİZ'iN ALT KISMINDAKİ ÜÇ KISIMDAN Soldaki ikili -->
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" style="width:300px;height:150px;" alt="" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@x.Aciklama.Substring(0, 80)</p>
                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }
    <!--PARTİAL İÇİNDE PARTiAL ÇAĞIRIYORUM-->
    @Html.Action("Partial2", "Default")

    <div class="clear"></div>
</div>
